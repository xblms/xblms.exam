@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
        .el-card__body, .el-main{
            padding:15px;
        }
        body {
            margin:0;
            padding:0;
        }
    </style>
}
<el-card class="rounded-0 sticky-top">
    <el-input prefix-icon="el-icon-search" clearable placeholder="关键字" v-model="form.keyWords">
        <el-button slot="append" icon="el-icon-search" v-on:click="btnSearchClick">查 询</el-button>
    </el-input>
</el-card>
<div class="p-3">
    <div v-if="list && list.length>0">
        <div v-for="(cer,index) in list" v-on:click="btnViewCer(cer)">
            <el-card class="mb-3 rounded-3">
                <div slot="header">
                    <span class="fw-bold">{{ cer.cerName }}【{{ cer.cerNumber }}】</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="position-relative">
                            <i class="bi bi-award fs-1 text-warning"></i>
                            <span class="position-absolute top-100 start-50 translate-middle mt-1 fs-6">{{ index+1 }}</span>
                        </div>
                    </div>
                    <div>
                        <div class="fs-5">
                            <div>{{ cer.awartDate }}</div>
                        </div>
                    </div>
                    <div>
                        <img :src="cer.cerImg" height="50" />
                    </div>
                </div>
            </el-card>
        </div>
        <div class="my-5 text-center">
            <small>没有更多了</small>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty image="/sitefiles/assets/images/nodata.svg" description="暂无证书"></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button-group>
        <el-button type="primary" v-on:click="location.href=utils.getRootUrl('mine')" icon="el-icon-back">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPaperCer.js" type="text/javascript"></script>
}