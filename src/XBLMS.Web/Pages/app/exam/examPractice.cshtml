@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
    </style>
}
<div style="position:fixed;left:0;top:0;width:100%;" class="text-center py-3 bg-white z-1">
    练习中心
</div>
<div class="pb-8"></div>
<div class="z-2">
    <div v-if="total>0">
        <div v-for="(item,index) in list">
            <el-card shadow="hover" class="mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="position-relative mb-2 text-success">
                            <i class="bi bi-pencil-square fs-2"></i>
                            <span class="position-absolute top-100 start-50 translate-middle mt-2 fs-6">{{ index+1 }}</span>
                        </div>
                    </div>
                    <div>
                        <div>
                            <el-collapse>
                                <el-collapse-item title="包含知识点">
                                    <el-tag type="success" size="mini" class="m-2" v-for="zsd in item.zsds">{{ zsd }}</el-tag>
                                </el-collapse-item>
                            </el-collapse>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="fs-5 me-2">共：<span class="text-success me-2">{{ item.tmTotal }}</span>道题</span>
                            <div class="bg-light p-2 rounded-pill">
                                <el-button type="primary" plain icon="el-icon-s-order" class="rounded-pill" v-on:click="btnCreateClick('Group',item.id,item.tmTotal)">开始练习</el-button>
                            </div>
                        </div>
                    </div>
                </div>
            </el-card>
        </div>
        <div class="my-5 text-center me-5">
            <span class="fw-light fs-6">没有更多了</span>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button-group class="btn-group p-1 bg-gray-300 rounded-pill">
        <el-button type="primary" class="rounded-start-pill" v-on:click="btnCreateClick('All')">快速开始</el-button>
        <el-button v-on:click="location.href=utils.getIndexUrl()" icon="el-icon-back" class="rounded-end-pill">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPractice.js" type="text/javascript"></script>
}