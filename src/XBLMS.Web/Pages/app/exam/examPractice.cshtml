@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        body {
            margin: 0;
            padding: 0;
        }
    </style>
}
<div class="px-3 pt-3">
    <div class="row g-3">
             <div class="col-12">
                    <el-button class="w-100 rounded-pill" type="primary" plain v-on:click="btnCreateClick('Create')">
                    <i class="bi bi-fast-forward-circle-fill me-3"></i>自定义刷题模型
                </el-button>
            </div>
            <div class="col-6">
                <el-button class="w-100 rounded-pill" type="success" plain v-on:click="btnCreateClick('Collect')">
                    <i class="bi bi-person-hearts me-3"></i>收藏练习
                </el-button>
            </div>
            <div class="col-6">
                     <el-button class="w-100 rounded-pill" type="warning" plain v-on:click="btnCreateClick('Wrong')">
                    <i class="bi bi-backspace-reverse me-3"></i>错题练习
                </el-button>
            </div>
        </div>
</div>
<div class="p-3"  v-if="total>0">
    <div>
        <div v-for="(item,index) in list">
            <div class="card card-bordered mb-3 card-hover cursor-pointer rounded-0" v-on:click="btnCreateClick('Group',item.id,item.tmCount)">
                <div class="card-body">
                    <div>
                        <div class="d-lg-flex">
                            <div class="mb-3 mb-lg-0">
                                <el-button type="warning" icon="el-icon-delete" circle v-on:click.stop="btnDeleteClick(item.id)"></el-button>
                            </div>
                            <div class="w-100 ms-lg-4">
                                <div class="mt-1">
                                    <div>
                                        <div class="mb-1 fw-bolder">
                                            {{ item.title }}
                                        </div>
                                        <div>
                                            <span class="text-dark fw-medium">
                                                {{ item.mineTmCount }} / {{ item.tmCount }} 道题
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="mt-4">
                                        <div class="row g-2">
                                            <div class="col-12 text-primary">
                                                <div class="d-flex justify-content-start align-items-start">
                                                    <div>
                                                        <span class="me-1"><i class="bi bi-arrow-right-circle"></i></span>
                                                    </div>
                                                    <div>
                                                        <span class="me-1 mb-1" v-for="txName in item.txNames">{{ txName }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 text-warning">
                                                <div class="d-flex justify-content-start align-items-start">
                                                    <div>
                                                        <span class="me-1"><i class="bi bi-arrow-right-circle"></i></span>
                                                    </div>
                                                    <div>
                                                        <span class="me-1 mb-1" v-for="nd in item.nds">{{ nd }}<i class="el-icon-star-on"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 text-success">
                                                <div class="d-flex justify-content-start align-items-start">
                                                    <div>
                                                        <span class="me-1"><i class="bi bi-arrow-right-circle"></i></span>
                                                    </div>
                                                    <div>
                                                        <span v-if="item.zsds && item.zsds.length>0">
                                                            <span class="me-1 mb-1" v-for="zsd in item.zsds">{{ zsd }}</span>
                                                        </span>
                                                        <span v-else>全部知识点</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="my-5 text-center">
            <el-button class="rounded-0" size="small" icon="el-icon-refresh-right" v-if="list.length>0 && list.length<total" v-on:click="btnLoadMoreClick" :loading="loadMoreLoading">加载更多</el-button>
            <small v-else>没有更多了</small>
        </div>
    </div>
    <div class="py-8"></div>
</div>
<div class="pt-8" v-else>
    <el-empty :image-size="88"></el-empty>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPractice.js" type="text/javascript"></script>
}