@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
        .el-progress-bar__outer{
            background-color:#fafafa !important;
        }

        body {
            margin: 0;
            padding: 0;
        }
    </style>
}
<div class="p-3" v-if="total>0">
    <div class="card-hover-with-icon" v-for="(practice,index) in list" v-on:click="goPracticeResult(practice.id)">
        <el-card class="mb-3 rounded-0" shadow="never">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="mb-2 fw-light fs-5">
                        {{ utils.getFriendlyDateTime(practice.createdDate) }}
                    </div>
                    <div class="mb-2">
                        <span class="fw-bold">{{ practice.title }}</span>
                    </div>
                    <ul class="list-inline fw-light">
                        <li class="list-inline-item fs-5">
                            答题：{{ practice.answerCount }}
                        </li>
                        <li class="list-inline-item fs-5">
                            正确：{{ practice.rightCount }}
                        </li>
                    </ul>
                </div>
                <div class="text-center">
                    <el-progress width="66" type="dashboard" color="#5cb87a" :percentage="utils.formatPercentFloat(practice.rightCount, practice.answerCount)"></el-progress>
                    <div class="fs-6 fw-light mt-1">正确率</div>
                </div>
            </div>
        </el-card>
    </div>
    <div class="my-5 text-center">
        <el-button class="rounded-pill" size="small" icon="el-icon-refresh-right" v-if="list.length>0 && list.length<total" v-on:click="btnLoadMoreClick" :loading="loadMoreLoading">加载更多</el-button>
        <small v-else>没有更多了</small>
    </div>
</div>
<div class="pt-8" v-else>
    <el-empty :image-size="88"></el-empty>
</div>
<div class="py-8"></div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button-group class="rounded-0">
        <el-button class="rounded-start-pill" type="warning" icon="el-icon-delete" v-on:click="btnClearClick">清空记录</el-button>
        <el-button class="rounded-end-pill" v-on:click="utils.closeLayerSelf" icon="el-icon-back">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPracticeLog.js" type="text/javascript"></script>
}