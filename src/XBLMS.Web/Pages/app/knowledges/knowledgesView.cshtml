@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        body {
            margin: 0;
            padding: 0;
        }
    </style>
}
<div class="position-relative">
    <iframe :src="'/sitefiles/assets/lib/PDFJS/web/Viewerapp.html?file='+url" :style="{height: ($(window).height()-6) + 'px'}" style="width:100%;height:100%;"></iframe>
</div>
<div style="position:fixed;right:5%;top:60%;" class="animate__animated animate__fadeInRightBig">
    <div>
        <div class="mb-3 text-center">
            <el-button type="success" icon="bi bi-hand-thumbs-up-fill" circle class="border-0 fs-2" v-if="isLike" v-on:click="btnLikeClick"></el-button>
            <el-button icon="bi bi-hand-thumbs-up" plain circle class="border-0 fs-2" v-else v-on:click="btnLikeClick"></el-button>
            <div>{{ likes }}</div>
        </div>
        <div class="mb-3 text-center">
            <el-button type="success" icon="el-icon-star-on" circle class="border-0 fs-2" v-if="isCollect" v-on:click="btnCollectClick"></el-button>
            <el-button icon="el-icon-star-off" plain circle class="border-0 fs-2" v-else v-on:click="btnCollectClick"></el-button>
            <div>{{ collects }}</div>
        </div>
        <div class="mb-2 text-center">
            <el-button icon="el-icon-back" circle class="border-0 fs-2" v-on:click="utils.closeLayerSelf"></el-button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/knowledges/knowledgesView.js" type="text/javascript"></script>
}