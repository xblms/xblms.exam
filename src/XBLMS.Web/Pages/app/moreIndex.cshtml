@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        body, html {
            padding: 0;
            margin: 0;
        }
    </style>
}
<iframe id="mineFrame" ref="mineFrame" :src="rightUrl" style="width: 100%;height:100%; border: none;" :style="{height: (winHeight-10) + 'px'}"></iframe>
<div style="position:fixed;right:10%;bottom:15%;" class="text-center">
    <el-popover placement="left-start"
                trigger="click" v-model="studyMenuPop">
        <div class="text-center p-2 pb-8">
            <div>
                <button type="button" class="btn rounded-pill border-0 fw-normal" :class="rightIndex===0?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(0)">
                    <div class="d-flex align-items-end justify-content-between">
                        <div>
                            模拟测验
                        </div>
                    </div>
                </button>
            </div>
            <div class="mt-2">
                <button type="button" class="btn rounded-pill border-0 fw-normal" :class="rightIndex===1?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(1)">
                    <div class="d-flex align-items-end justify-content-between">
                        <div>
                            题库练习
                        </div>
                    </div>
                </button>
            </div>
            <el-divider class="mt-2">
            </el-divider>
            <div class="mt-2">
                <button type="button" class="btn rounded-pill border-0 fw-normal" :class="rightIndex===3?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(3)">
                    <div class="d-flex align-items-end justify-content-between">
                        <div>
                            测评中心
                        </div>
                    </div>
                </button>
            </div>
            <div class="mt-2">
                            <button type="button" class="btn rounded-pill border-0 fw-normal" :class="rightIndex===4?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(4)">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        答题竞赛
                    </div>
                </div>
            </button>
            </div>
            <div class="mt-2 mb-3">
                            <button type="button" class="btn rounded-pill border-0 fw-normal" :class="rightIndex===5?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(5)">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        知识库
                    </div>
                </div>
            </button>
            </div>
        </div>
        <el-button class="fs-3 shadow-lg" slot="reference" type="primary" icon="el-icon-menu" circle></el-button>
    </el-popover>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/moreIndex.js" type="text/javascript"></script>
}
