@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
        .el-input__inner {
            border-radius: 0 !important;
        }
        body {
            padding: 0;
            margin: 0;
        }

        html {
            padding: 0;
            margin: 0;
        }
    </style>
}
<el-card class="rounded-0 sticky-top">
    <el-input prefix-icon="el-icon-search" clearable placeholder="关键字" v-model="form.keyWords">
        <el-button slot="append" icon="el-icon-search" v-on:click="btnSearchClick">查 询</el-button>
    </el-input>
</el-card>
<div>
    <div v-if="total>0">
        <el-card class="rounded-0 border-0">
            <div class="d-flex align-items-center mb-2 py-3 border border-start-0 border-end-0 border-top-0 card-hover-bg-title" v-for="(log,index) in list">
                <div class="position-relative">
                    <i class="el-icon-present fs-1"></i>
                    <span class="position-absolute top-50 start-100 translate-middle ms-2 mt-2 card-title">.{{ index+1 }}</span>
                </div>
                <div class="ps-6 me-5">
                    <div class="mb-2">
                        <span class="badge text-bg-success" v-if="log.userState==='Yiqianshou' || log.userState==='Yiling'">{{ log.userStateStr }}</span>
                        <span class="badge text-bg-warning" v-else>{{ log.userStateStr }}</span>
                    </div>
                    <div>
                        {{ utils.getFriendlyDate(log.createdDate) }}
                    </div>
                    <div>
                        <span class="card-title">兑换商品 {{ log.shopName }} 1件</span>
                    </div>
                </div>
                <div class="ms-auto fs-4 text-nowrap">
                    <span class="text-danger fw-bolder">- {{ log.point }}</span>
                </div>
            </div>
        </el-card>
        <div class="my-5 text-center">
            <el-button class="border-0 rounded-pill" icon="el-icon-refresh-right" v-if="list.length>0 && list.length<total" v-on:click="btnLoadMoreClick" :loading="loadMoreLoading">加载更多</el-button>
            <small v-else>没有更多了</small>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty :image-size="55"></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button class="rounded-pill" type="primary" v-on:click="utils.closeLayerSelf" icon="el-icon-back">返 回</el-button>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/gift/pointShopLog.js" type="text/javascript"></script>
}