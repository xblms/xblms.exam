@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        body {
            padding: 0;
            margin: 0;
        }
    </style>
}
<iframe id="studyFrame" ref="studyFrame" :src="studyUrl" style="width: 100%;height:100%; border: none;" :style="{height: (winHeight-10) + 'px'}"></iframe>
<div style="position:fixed;right:10%;bottom:15%;" class="text-center">
    <el-popover placement="left-start"
                trigger="click" v-model="studyMenuPop">
        <div class="text-center p-2 pb-8">
            <div class="mb-2">
                <button type="button" class="btn rounded-pill border-0 fw-normal" :class="studyCurrent==='plan'?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnStudyClick('plan')">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            学习任务
                        </div>
                    </div>
                </button>
            </div>
            <div class="mb-2">
                <button type="button" class="btn rounded-pill border-0 fw-normal mt-2" :class="studyCurrent==='course'?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnStudyClick('course')">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        课程中心
                    </div>
                </div>
            </button>
            </div>
            <div class="mb-3">
                 <button type="button" class="btn rounded-pill border-0 fw-normal mt-2" :class="studyCurrent==='last'?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnStudyClick('last')">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        上次学习
                    </div>
                </div>
            </button>
             </div>
        </div>
        <el-button class="fs-3 shadow-lg" slot="reference" type="primary" icon="el-icon-menu" circle></el-button>
    </el-popover>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/study/studyIndex.js" type="text/javascript"></script>
}
