@page
@{ Layout = "_Layout"; }

<el-card>
    <el-scrollbar class="scrollbar" :style="{height: ($(window).height() - 65) + 'px'}">
        <el-form v-on:submit.native.prevent ref="form" :model="form" :size="euiSize" status-icon label-width="160px">
            <el-form-item label="操作">
                <el-radio v-model="form.isEncrypt" :label="true">加密</el-radio>
                <el-radio v-model="form.isEncrypt" :label="false">解密</el-radio>
            </el-form-item>
            <el-form-item :label="'需要' + (form.isEncrypt ? '加密' : '解密') + '的字符串'" prop="value" :rules="{ required: true, message: '请输入字符串' }">
                <el-input v-model="form.value" type="textarea" rows="5"></el-input>
            </el-form-item>
            <el-form-item v-if="results" :label="(form.isEncrypt ? '加密' : '解密') + '后的字符串'">
                <strong>{{ results }}</strong>
            </el-form-item>
            <el-form-item>
                <el-button icon="el-icon-check" :size="euiSize" type="primary" v-on:click="btnSubmitClick">
                    <span v-if="form.isEncrypt">加 密</span>
                    <span v-else>解 密</span>
                </el-button>
            </el-form-item>
        </el-form>
        </el-scrollbar>
</el-card>


@section Scripts{
<script src="/sitefiles/assets/js/admin/settings/utilitiesEncrypt.js" type="text/javascript"></script> }