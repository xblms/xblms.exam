@page
@{ Layout = "_Layout"; }

@section Styles{
    <link href="/sitefiles/assets/lib/geeks/css/theme.min.css" rel="stylesheet" type="text/css" />
    <style>
        body {
            padding: 0;
            margin: 0;
            background: #fafafa;
        }

        html {
            padding: 0;
            margin: 0;
            background: #fafafa;
        }
    </style>
}

<div class="p-3">
    <el-form v-on:submit.native.prevent :inline="true" :model="form" :size="euiSize">
        <el-form-item label="时间：从">
            <el-date-picker v-model="form.dateFrom"
                            type="date"
                            value-format="yyyy-MM-ddTHH:mm:ss.000Z"
                            placeholder="选择开始日期">
            </el-date-picker>
        </el-form-item>
        <el-form-item label="到">
            <el-date-picker v-model="form.dateTo"
                            type="date"
                            value-format="yyyy-MM-ddTHH:mm:ss.000Z"
                            placeholder="选择结束日期">
            </el-date-picker>
        </el-form-item>
        <el-form-item>
            <el-button type="primary" v-on:click="btnSearchClick" icon="el-icon-search">查 询</el-button>
        </el-form-item>
    </el-form>
    <el-table :data="list" :size="euiSize"
              style="width: 100%">
        <el-table-column label="#"
                         type="index"
                         width="60"
                         align="left">
            <template scope="scope">
                <span>{{(form.pageIndex - 1) * form.pageSize + scope.$index + 1}}</span>
            </template>
        </el-table-column>
        <el-table-column label="证书" width="80">
            <template slot-scope="scope">
                <el-tooltip content="点击预览" placement="right">
                    <el-image style="width: 50px;height: 30px;" v-on:click="btnViewCer(scope.row)"
                              :src="scope.row.cerImg+ '?r=' + Math.random()"
                              class="image" lazy></el-image>
                </el-tooltip>
            </template>
        </el-table-column>
        <el-table-column label="证书名称" prop="cerName">
        </el-table-column>
        <el-table-column label="证书编号" width="150">
            <template slot-scope="scope">
                {{scope.row.cerNumber}}
            </template>
        </el-table-column>
        <el-table-column label="获证日期"  prop="createdDate" width="150">
        </el-table-column>
        <el-table-column label="来源" prop="source">
        </el-table-column>
        @await Html.PartialAsync("_PartialTableEmpty")
    </el-table>
    <div style="height:18px;"></div>
    <el-row>
        <el-col :span="24" align="left">
            <el-pagination background
                           v-on:current-change="handleCurrentChange"
                           :current-page="form.pageIndex"
                           :page-size="form.pageSize"
                           layout="total, prev, pager, next, jumper"
                           :total="total">
            </el-pagination>
        </el-col>
    </el-row>
</div>

@section Scripts{
<script src="/sitefiles/assets/js/admin/common/userDocExamCer.js" type="text/javascript"></script>
}
