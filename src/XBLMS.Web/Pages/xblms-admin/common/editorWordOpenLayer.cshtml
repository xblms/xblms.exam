@page
@{ Layout = "_Layout"; }
@section Styles{
  <style>
    .el-upload, .el-upload-dragger {width: 100%;}
  </style>
}

<el-card>
    <div slot="header" class="clearfix">
        <span>导入word</span>
        <el-button style="float: right;padding:3px 0;" type="text" v-on:click="utils.closeLayerSelf"><i class="el-icon-close"></i></el-button>
    </div>
    <div>
        <el-scrollbar class="scrollbar" :style="{ height: ($(window).innerHeight()-180) + 'px' }">
            <div style="margin-right:18px;">
                <el-upload drag
                           :action="uploadUrl"
                           :headers="{Authorization: 'Bearer ' + $token}"
                           :file-list="uploadList"
                           :before-upload="uploadBefore"
                           :on-progress="uploadProgress"
                           :on-success="uploadSuccess"
                           :on-error="uploadError"
                           :show-file-list="false"
                           :multiple="false">
                    <i class="el-icon-upload"></i>
                    <div class="el-upload__text">将Word文件拖到此处，或<em>点击上传</em></div>
                    <div class="el-upload__tip" slot="tip" style="color:red;">仅支docx文件，且单个文件大小不超过2G。</div>
                    <div class="el-upload__tip" slot="tip" style="color:red;">不支持数学公式。</div>
                </el-upload>
            </div>
        </el-scrollbar>
    </div>
</el-card>
<el-row align="center" style="margin-top:18px;">
    <el-col :span="24" align="center">
        <el-button icon="el-icon-close" :size="euiSize" v-on:click="utils.closeLayerSelf">取 消</el-button>
    </el-col>
</el-row>
@section Scripts{
<script src="/sitefiles/assets/js/admin/common/editorWordOpenLayer.js" type="text/javascript"></script>
}
