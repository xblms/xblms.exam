@page
@{ Layout = "_Layout"; }

@section Styles{
    <style>
        .el-descriptions-item__label.is-bordered-label {
            width: 200px;
        }
    </style>
}

<el-card>
    <div slot="header" class="clearfix">
        <span>{{ user.displayName+'-账号信息' }}</span>
        <el-button style="float: right;padding:3px 0;" type="text" v-on:click="utils.closeLayerSelf()"><i class="el-icon-close"></i></el-button>
    </div>
    <div style="margin-right:18px;">
        <el-row :gutter="0">
            <el-col :span="6" style="text-align:center;">
                <el-badge v-if="user.locked" style="margin-top: 10px;" value="锁定">
                    <el-avatar :size="100" :src="user.avatarUrl || DEFAULT_AVATAR_URL"></el-avatar>
                </el-badge>
                <el-avatar v-else :size="100" :src="user.avatarUrl || DEFAULT_AVATAR_URL"></el-avatar>
                <div style="padding:18px 0;">
                    <span><i class="el-icon-user" style="padding:0 3px"></i>{{ user.displayName }}</span>
                </div>
                <el-button icon="el-icon-pie-chart" type="primary" :size="euiSize" v-on:click="btnDocClick">{{ systemCode==='Exam'?'考生档案':'学员档案' }}</el-button>
            </el-col>
            <el-col :span="18">
                <el-scrollbar class="scrollbar" :style="{ height: ($(window).innerHeight()-180) + 'px' }">
                    <el-descriptions title="" border column="1" style="margin-right:10px;">
                        <el-descriptions-item label="账 号">{{ user.userName }}</el-descriptions-item>
                        <el-descriptions-item label="姓 名">{{ user.displayName }}</el-descriptions-item>
                        <el-descriptions-item label="组 织">{{ user.organNames }}</el-descriptions-item>
                        <el-descriptions-item label="岗 位">{{ user.dutyName }}</el-descriptions-item>
                        <el-descriptions-item label="上次登录时间">{{ user.lastActivityDate }}</el-descriptions-item>
                        <el-descriptions-item label="登录次数">{{ user.countOfLogin }}</el-descriptions-item>
                        <el-descriptions-item label="证件照">
                            <el-avatar :size="200" shape="square" :src="user.avatarCerUrl || DEFAULT_AVATAR_URL"></el-avatar>
                        </el-descriptions-item>
                    </el-descriptions>
                </el-scrollbar>
            </el-col>
        </el-row>
    </div>
</el-card>
<el-row align="center" style="margin-top:18px;">
    <el-col :span="24" align="center">
        <el-button icon="el-icon-close" :size="euiSize" v-on:click="btnCancelClick">关 闭</el-button>
    </el-col>
</el-row>

@section Scripts{
<script src="/sitefiles/assets/js/admin/common/userLayerView.js" type="text/javascript"></script>
}
