@page
@{ Layout = "_Layout"; }
@section Styles{
    <link href="/sitefiles/assets/lib/geeks/css/theme.min.css" rel="stylesheet" type="text/css" />
    <style>
        html{
            padding:5px;
        }
    </style>
}

<el-card>
    <div slot="header" class="clearfix">
        <span>题目纠错预览</span>
        <el-button style="float: right;padding:3px 0;" type="text" v-on:click="utils.closeLayerSelf"><i class="el-icon-close"></i></el-button>
    </div>
    <el-scrollbar class="scrollbar" :style="{ height: ($(window).innerHeight()-190) + 'px' }">
        <div style="margin-right:15px;">
            <el-row :gutter="10">
                <el-col :span="6">
                    <el-descriptions title="" :column="1" border>
                        <el-descriptions-item label="纠错人">
                            <el-link :underline="false" type="primary" v-on:click="utils.openUserView(info.userId)">{{ info.userDisplayName }}</el-link>
                        </el-descriptions-item>
                        <el-descriptions-item>
                            <template slot="label">
                                <nobr>纠错时间</nobr>
                            </template>
                            {{ info.createdDate }}</el-descriptions-item>
                        <el-descriptions-item label="纠错理由">{{ info.reason }}</el-descriptions-item>
                        <el-descriptions-item label="状态"><el-tag size="small" :type="utils.toLowerCase(info.auditStatus)">{{ info.auditStatusStr }}</el-tag></el-descriptions-item>
                        <el-descriptions-item label="审核理由">{{ info.auditResaon }}</el-descriptions-item>
                        <el-descriptions-item label="审核时间">{{ info.auditDate }}</el-descriptions-item>
                    </el-descriptions>
                </el-col>
                <el-col :span="18">
                    <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" width="100"></th>
                            <th scope="col">纠错时</th>
                            <th scope="col">现在</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr :class="tm.txName!==tmNew.txName?'table-warning':''">
                            <th scope="row">题型</th>
                            <td><span v-html="tm.txName"></span></td>
                            <td><span v-html="tmNew.txName"></span></td>
                        </tr>
                        <tr :class="tm.title!==tmNew.title?'table-warning':''">
                            <th scope="row">题目</th>
                            <td><span v-html="tm.title"></span></td>
                            <td><span v-html="tmNew.title"></span></td>
                        </tr>
                        <tr :class="tm.optionsStr!==tmNew.optionsStr?'table-warning':''">
                            <th scope="row">候选项</th>
                            <td>
                                <div v-for="option in tm.options">{{ option }}</div>
                            </td>
                            <td>
                                <div v-for="option in tmNew.options">{{ option }}</div>
                            </td>
                        </tr>
                        <tr :class="tm.answer!==tmNew.answer?'table-warning':''">
                            <th scope="row">答案</th>
                            <td><span v-html="tm.answer"></span></td>
                            <td><span v-html="tmNew.answer"></span></td>
                        </tr>
                        <tr :class="tm.score!==tmNew.score?'table-warning':''">
                            <th scope="row">分数</th>
                            <td><span v-html="tm.score"></span></td>
                            <td><span v-html="tmNew.score"></span></td>
                        </tr>
                        <tr :class="tm.zhishidian!==tmNew.zhishidian?'table-warning':''">
                            <th scope="row">知识点</th>
                            <td><span v-html="tm.zhishidian"></span></td>
                            <td><span v-html="tmNew.zhishidian"></span></td>
                        </tr>
                        <tr :class="tm.jiexi!==tmNew.jiexi?'table-warning':''">
                            <th scope="row">解析</th>
                            <td><span v-html="tm.jiexi"></span></td>
                            <td><span v-html="tmNew.jiexi"></span></td>
                        </tr>
                    </tbody>
                </table>
                </el-col>
            </el-row>
        </div>
    </el-scrollbar>
</el-card>
<el-row align="center" style="margin-top:18px;">
    <el-col :span="24" align="center">
        <el-button icon="el-icon-close" :size="euiSize" v-on:click="utils.closeLayerSelf">关 闭</el-button>
    </el-col>
</el-row>
@section Scripts{
<script src="/sitefiles/assets/js/admin/common/examTmCorrectionLayerView.js" type="text/javascript"></script>
}
