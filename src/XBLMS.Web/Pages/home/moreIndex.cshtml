@page
@{ Layout = "_LayoutHome"; }
@section Styles{
    <style>
        body, html {
            padding: 0;
            margin: 0;
            background: #ffffff;
            overflow: hidden;
        }
    </style>
}
<div style="width:238px;position:fixed;" class="bg-white" :style="{height: (winHeight) + 'px'}">
    <div class="rounded-0 shadow p-3">
        <div class="row align-items-center">
            <div class="col-xl-12 col-lg-12 col-md-12 col-12 text-center fw-bolder">
                <i class="bi bi-person-fill me-2"></i>更多功能
            </div>
        </div>
    </div>
    <div class="p-5">
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal" :class="rightIndex===0?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(0)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    模拟测验
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mt-2" :class="rightIndex===1?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(1)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    题库练习
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <el-divider class="mt-2">
        </el-divider>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mt-2" :class="rightIndex===2?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(2)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    问卷调查
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mt-2" :class="rightIndex===3?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(3)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    测评中心
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <el-divider class="mt-2">
        </el-divider>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mt-2" :class="rightIndex===4?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(4)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    答题竞赛
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <el-divider class="mt-2">
        </el-divider>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mt-2" :class="rightIndex===5?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(5)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    知识库
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
    </div>
</div>
<div style="margin-left:238px;height:100%;">
    <iframe id="mineFrame" ref="mineFrame" :src="rightUrl" style="width: 100%;height:100%; border: none;" :style="{height: (winHeight) + 'px'}"></iframe>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/home/moreIndex.js" type="text/javascript"></script>
}
