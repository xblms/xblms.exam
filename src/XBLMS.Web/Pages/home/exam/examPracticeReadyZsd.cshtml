@page
@{ Layout = "_LayoutHome"; }
@section Styles{
    <style>
        .el-checkbox {
            margin-right: 5px;
            margin-bottom: 5px;
        }

            .el-button + .el-button, .el-checkbox.is-bordered + .el-checkbox.is-bordered {
                margin-left: 0;
            }
    </style>
}
<el-card>
    <div slot="header" class="d-flex justify-content-between align-items-center">
        <div><span>请选择知识点</span></div>
        <div>
            <el-radio v-model="order" label="total" v-on:input="apiGet">按数量排序</el-radio>
            <el-radio v-model="order" label="name" v-on:input="apiGet">按名称排序</el-radio>
        </div>
    </div>
    <el-scrollbar class="scrollbar" :style="{ height: ($(window).innerHeight()-200) + 'px' }">
        <div style="margin-right:18px;">
            <el-checkbox-group v-model="zsdSelect">
                <el-checkbox :label="zsd.key" :key="zsd.key" border v-for="zsd in zsdList">{{ zsd.key }}（{{ zsd.value }}）</el-checkbox>
            </el-checkbox-group>
        </div>
    </el-scrollbar>
</el-card>
<el-row align="center" style="margin-top:18px;">
    <el-col :span="24" align="center">
        <el-button icon="el-icon-check" type="success" v-on:click="btnSubmitClick">确 定</el-button>
        <el-button icon="el-icon-close" v-on:click="utils.closeLayerSelf">取 消</el-button>
    </el-col>
</el-row>

@section Scripts{
    <script src="/sitefiles/assets/js/home/exam/examPracticeReadyZsd.js" type="text/javascript"></script>
}