@page
@{ Layout = "_LayoutHome"; }
@section Styles{
    <style>
        .el-rate__icon{
            font-size:30px !important;
        }
    </style>
}

<el-card>
    <div slot="header" class="clearfix">
        <span>{{ title }}-课后评价</span>
        <el-button style="float: right;padding:3px 0;" type="text" v-on:click="utils.closeLayerSelf"><i class="el-icon-close"></i></el-button>
    </div>
    <el-scrollbar class="scrollbar" :style="{ height: ($(window).innerHeight()-180) + 'px' }">
        <div style="margin-right:18px;">
            <el-form v-on:submit.native.prevent label-position="top">
                <template v-for="item in list">
                    <template v-if="item.textContent">
                        <el-form-item :label="item.title">
                            <el-input type="textarea" :rows="2" v-model="item.strValue"></el-input>
                        </el-form-item>
                    </template>
                    <template v-else>
                        <el-form-item :label="item.title">
                            <el-rate v-model="item.starValue" :max="maxStar" class="fs-3"></el-rate>
                            <small class="text-warning">必填项</small>
                        </el-form-item>
                    </template>
                </template>
            </el-form>
        </div>
    </el-scrollbar>
</el-card>
<el-row align="center" style="margin-top:18px;">
    <el-col :span="24" align="center">
        <el-button :size="euiSize" type="primary" v-on:click="btnSubmitClick">提交评价</el-button>
        <el-button icon="el-icon-close" :size="euiSize" v-on:click="utils.closeLayerSelf">取 消</el-button>
    </el-col>
</el-row>
@section Scripts{
<script src="/sitefiles/assets/js/home/study/studyCourseEvaluation.js" type="text/javascript"></script> }