@page
@{ Layout = "_LayoutHome"; }
@section Styles{
    <style>
        body,html {
            padding: 0;
            margin: 0;
            background: #ffffff;
            overflow:hidden;
        }
    </style>
}
<div style="width:238px;position:fixed;" class="bg-white" :style="{height: (winHeight) + 'px'}">
    <div class="rounded-0 shadow p-3">
        <div class="row align-items-center">
            <div class="col-xl-12 col-lg-12 col-md-12 col-12 text-center fw-bolder">
                <i class="bi bi-person-fill me-2"></i>我 的
            </div>
        </div>
    </div>
    <div class="p-5">
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===11?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(11)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    数据中心
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===1?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(1)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    考试成绩
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===2?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(2)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    获得证书
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===3?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(3)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    积分记录
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===4?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(4)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    兑换记录
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
        <el-divider class="mb-2">
        </el-divider>
                    <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===5?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(5)">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        修改信息
                    </div>
                    <div><i class="el-icon-caret-right"></i></div>
                </div>
            </button>
               <button type="button" class="btn w-100 rounded-pill border-0 fw-normal mb-2" :class="webHomeUserCenterMenuIndex===6?'btn-dark button-fa':'btn-outline-dark'" v-on:click="btnMenu(6)">
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    修改密码
                </div>
                <div><i class="el-icon-caret-right"></i></div>
            </div>
        </button>
    </div>
</div>
<div style="margin-left:238px;height:100%;">
    <iframe id="mineFrame" ref="mineFrame" :src="mineUrl" style="width: 100%;height:100%; border: none;" :style="{height: (winHeight) + 'px'}"></iframe>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/home/mine.js" type="text/javascript"></script>
}
